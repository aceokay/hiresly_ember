{{yield}}
<div class="container">
  {{#if devLogin}}
  <ul>
    {{#each developers as |developer|}}
    {{#link-to 'developer' developer.id}}
    <button>{{developer.email}}</button>
    {{/link-to}}
    {{/each}}
  </ul>
  {{else}}
    {{#bs-button class="btn-primary center-block" action='devLoginShow'}}Developer Login{{/bs-button}}
  {{/if}}
</div>

{{#if mysession.isAuthenticated}}
  <p>You are already logged in as <b>{{mysession.currentUser.email}}</b></p>
{{else}}
<div class="container">
  <form>
    <div class="form-group">
      <label for="email">Email</label>
      {{input value=email id="email" class="form-control" placeholder="example@developer.com"}}
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      {{input type="password" value=password id="password" class="form-control" placeholder="example@developer.com"}}
    </div>
    <button {{action "signIn"}}>LOG ME IN</button>
  </form>
</div>
{{/if}}





