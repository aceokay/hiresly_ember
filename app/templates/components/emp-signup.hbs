{{yield}}
<div class="container">
  {{#if addNewEmp}}
  <h1>New Employer Sign-up</h1>
  {{#bs-form}}
    {{#bs-form-group}}
      {{bs-input value=company placeholder="company"}}
    {{/bs-form-group}}
    {{#bs-form-group}}
      {{bs-input value=email placeholder="email"}}
    {{/bs-form-group}}
    {{#bs-form-group}}
      {{bs-input value=password placeholder="password"}}
    {{/bs-form-group}}
    {{#bs-button class="btn-primary" action='save'}}Save{{/bs-button}}
  {{/bs-form}}
  {{else}}
    {{#bs-button class="btn-danger center-block" action='empFormShow'}}Employer Sign-up{{/bs-button}}
  {{/if}}
</div>
